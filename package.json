{
    "name": "myonewallet-api",
    "version": "1.0.0",
    "engines": {
        "node": "16.x"
    },
    "repository": "git@github.com:myonewallet/api.git",
    "author": "Jean-Baptiste TERRAZZONI",
    "license": "MIT",
    "scripts": {
        "start": "node -r tsconfig-paths/register -r ts-node/register ./src/app.ts",
        "dev": "nodemon",
        "dev:docker-up": "docker-compose -f docker-compose.dev.yml up -d postgres migration",
        "dev:docker-down": "docker-compose -f docker-compose.dev.yml down",
        "test": "NODE_ENV=test jest --silent",
        "test:debug": "NODE_ENV=test jest --runInBand --detectOpenHandles",
        "test:coverage": "jest --coverage",
        "test:docker": "docker-compose -f docker-compose.test.yml up --exit-code-from app",
        "test:docker-up": "docker-compose -f docker-compose.test.yml up -d postgres migration",
        "test:docker-down": "docker-compose -f docker-compose.test.yml down",
        "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
        "lint:fix": "eslint --fix --ext .js,.jsx,.ts,.tsx .",
        "db:migrate": "npx prisma migrate dev --name",
        "db:migrate-deploy": "npx prisma migrate deploy --preview-feature",
        "db:revert": "#todo"
    },
    "devDependencies": {
        "@shopify/jest-koa-mocks": "^3.0.6",
        "@types/config": "^0.0.40",
        "@types/jest": "^27.0.2",
        "@types/koa": "^2.13.4",
        "@types/koa-bodyparser": "^4.3.4",
        "@types/koa-router": "^7.4.4",
        "@types/lodash": "^4.14.178",
        "@types/node": "^16.11.6",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^5.3.0",
        "@typescript-eslint/parser": "^5.3.0",
        "eslint": "^8.1.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
        "eslint-plugin-sort-keys-fix": "^1.1.2",
        "jest": "^27.3.1",
        "jest-mock-extended": "^2.0.4",
        "nodemon": "^2.0.14",
        "pg-connection-string": "^2.5.0",
        "pgtools": "^0.3.2",
        "prettier": "^2.4.1",
        "prisma": "^3.9.1",
        "supertest": "^6.1.6",
        "ts-jest": "^27.0.7"
    },
    "dependencies": {
        "@prisma/client": "^3.9.1",
        "config": "^3.3.6",
        "dotenv": "^10.0.0",
        "http-status-codes": "^2.1.4",
        "koa": "^2.13.4",
        "koa-bodyparser": "^4.3.0",
        "koa-router": "^10.1.1",
        "lodash": "^4.17.21",
        "ts-node": "^10.4.0",
        "tsconfig-paths": "^3.11.0",
        "typescript": "^4.4.4",
        "winston": "^3.3.3",
        "zod": "^3.11.6"
    }
}
